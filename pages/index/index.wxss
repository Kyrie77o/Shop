page{
  background:linear-gradient(#141e30,#243b55)
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  border-bottom:1px solid #fff;
}
.userinfo-avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.locationdata{
  position: absolute;
  right: 0;
  margin-right: 1rem;
}
.btns{
  position: absolute;
  display: flex;
  left: 0;
  right: 0;
  bottom:0;
  margin-bottom:3rem;
  text-align: center;
  flex-direction: column;
  align-items: center;

}
#nav-shop{
  background:#fff;
  
}
.btn{
  text-align: center;
  height: 300rpx;
  line-height: 300rpx;
  width: 300rpx;
  margin: 20rpx;
}
.btn-publish{
  position: relative;
  
}
.nav{
  text-align: center;
  height: 100%;
  background-color: rgba(0,0,0,0.2);
  color: #03bbd5;
  border-radius: 50%;
  box-shadow: 0 0px 20px 5px #03bbd5;
  display: flex;
  flex-direction: column;
  align-items: center;


}
.tex{
  position: absolute;
  top:25%;
  left: 25%;
  right: 25%;
  height: 50%;
  line-height: 150rpx;
  overflow: hidden;
  letter-spacing:3px ;

}
.texta{
  position: inherit;
  top:0;
  left: -100%;
  width: 100%;
  height: 2px;
  /* to right 就是颜色往右渐变 */
  background:linear-gradient(to right,transparent,#03e9f4);
  animation:move1 1s linear infinite;
  
}
.textb{
  position: inherit;
  right: 0;
  top:-100%;
  width:2px;
  height: 100%;
  background:linear-gradient(transparent,#03e9f4);
  animation:move2 1s linear 0.25s infinite;
  
}
.textc{
  position: inherit;
  right: -100%;
  bottom: 0;
  width:100%;
  height: 2px;
  background:linear-gradient(to left,transparent,#03e9f4);
  animation:move3 1s linear 0.5s infinite;
  
}
.textd{
  position: inherit;
  left: 0;
  bottom: -100%;
  width: 2px;
  height: 100%;
  background:linear-gradient(#03e9f4,transparent);
  animation:move4 1s linear 0.75s infinite;
  
}
@keyframes move1{
  0%{
      left:-100%;
  }
  50%,
  100%{
      left: 100%;

  }
}
@keyframes move2{
  0%{
      top:-100%;
  }
  50%,
  100%{
      top: 100%;
      
  }
}
@keyframes move3{
  0%{
      right:-100%;
  }
  50%,
  100%{
      right: 100%;
      
  }
}
@keyframes move4{
  0%{
      bottom:-100%;
  }
  50%,
  100%{
      bottom: 100%;
      
  }
}
.history{
  position: fixed;
 
  color:#fff;
  top:140rpx;
  margin:1rem;
  
  right: 0;

}
.select-wrap {
  width: 300rpx;
}
.container{
  margin-right:1rem;
  position: absolute;
  right: 0;
}






